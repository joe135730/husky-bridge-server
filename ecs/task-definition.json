{
  "family": "husky-bridge-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::723977204603:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::723977204603:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "husky-bridge-backend",
      "image": "723977204603.dkr.ecr.us-east-2.amazonaws.com/husky-bridge-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 4000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "4000"
        },
        {
          "name": "MONGO_CONNECTION_STRING",
          "value": "mongodb+srv://joe135730:+Joe19990123@husky-bridge.et7o6pl.mongodb.net/husky-bridge?appName=husky-bridge"
        },
        {
          "name": "SESSION_SECRET",
          "value": "c071c1cd265411c1458c8f3f6f7e1a6502aa4f111732390ef07f8c1a5541ecfa"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/husky-bridge-backend",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"require('http').get('http://localhost:4000/api/auth/current', (r) => {process.exit(r.statusCode === 200 || r.statusCode === 401 ? 0 : 1)})\""
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

